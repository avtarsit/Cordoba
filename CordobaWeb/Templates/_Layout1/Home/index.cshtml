
<div>
    <div class="container-fluid">
        <div class="col-md-9 col-xs-12 mb-30">
            <div class="row">
                <div class="col-sm-12 banner-slider" ng-controller="Dashboard_BannerController">
                    <ul class="main-banner" data-bx-slider="pager:false,nextText:'',prevText:'',mode: 'fade'">
                        <li ng-repeat="Banner in BannerList" data-notify-when-repeat-finished>
                            <img ng-src="{{Banner.ImgSrc}}" alt="Slider banner" />
                        </li>
                    </ul>
                </div>
                @* Dashboard_BestSellerController *@
                <div class="col-sm-12" ng-controller="Dashboard_BestSellerController">
                    <div class="col-sm-12 white-bg">
                        <div class="block-heading">
                            <h4>Best Sellers</h4>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="best-seller content inner ">
                                    <div class="seller-block" ng-repeat="BestSeller in BestSellerList">
                                        <div class="col-xs-4">
                                            <img class="full-width" ng-src="{{BestSeller.BestSellerImgSrc}}" alt="seller" />
                                        </div>
                                        <div class="col-xs-8">
                                            <p class="seller-desc" ng-bind="BestSeller.BestSellerName"></p>
                                            <p class="seller-desc"><span ng-bind="BestSeller.Points"></span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


        @*  Dashboard_RewardWinnerController*@
        <div ng-controller="Dashboard_RewardWinnerController">
            <div class="col-md-3 col-xs-12 mb-30" ng-if="Make_rewardWinnerVisible">
                <div class="col-sm-12 block-bg deals">
                    <div class="block-heading">
                        <h4>Reward Winners</h4>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row">

                        <div class="hot-deals" data-bx-slider="pager: false,nextText: '',prevText: '',minSlides: 1,maxSlides: 1,mode: 'vertical'">
                            <div class="media col-sm-12" ng-repeat="rewardWinner in RewardWinners" data-notify-when-repeat-finished>
                                <div class="media-left">
                                    <img class="media-object" ng-src="{{rewardWinner.Customer_img}}" alt="deals" />
                                </div>
                                <div class="media-body">
                                    <h4 class="media-heading" ng-bind="rewardWinner.Title"></h4>
                                    <p ng-bind="rewardWinner.WinnerName"></p>
                                    <span ng-bind="rewardWinner.Rewards"></span>
                                    <span ng-bind="rewardWinner.winner_declared_date | date:'MM-dd-yyyy'"></span>
                                </div>
                                @*<div class="add-cart">
                                    <button class="btn btn-empty">Add to Cart</button>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    

        @* Dashboard_HotDealsController *@
        <div ng-controller="Dashboard_HotDealsController" >
            <div class="col-md-3 col-xs-12 mb-30" ng-if="HotDealsList.length>0">
                <div class="col-sm-12 block-bg deals">
                    <div class="block-heading">
                        <h4>Hot Deals</h4>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="hot-deals" data-bx-slider="pager: false,nextText: '',prevText: '',minSlides: 1,maxSlides: 1,mode: 'vertical'">
                            <div class="media col-sm-12" ng-repeat="HotDeals in HotDealsList" data-notify-when-repeat-finished>
                                <div class="media-left">
                                    <img class="media-object" ng-src="{{HotDeals.Image}}" alt="deals" />
                                </div>
                                <div class="media-body">
                                    <h4 class="media-heading" ng-bind="HotDeals.name"></h4>
                                    <p ng-bind="HotDeals.Model"></p>
                                    <span ng-bind="(HotDeals.cost | number:2) +' Points'"></span>
                                </div>
                                <div class="add-cart" ng-controller="AddProductToCartController">
                                    <button class="btn btn-empty" ng-click="AddProductToCart(HotDeals,$event)">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      

        @* Dashboard_PopularCategoryController *@
        <div class="col-md-7 col-xs-12 mt-15 mb-30" ng-controller="Dashboard_PopularCategoryController" >
            <div class="col-sm-12 block-bg popular-category" ng-if="PopularCategoryList.length>0">
                <div class="block-heading">
                    <h4>Popular Categories</h4>
                </div>
                <div class="row">
                    <div class="col-sm-3 text-center pb-20" ng-repeat="PopularCategory in PopularCategoryList">
                        <div class="row">
                            <div class="col-sm-12">
                                <img ng-src="{{PopularCategory.image}}" alt="{{PopularCategory.name}}" />
                            </div>
                            <a href="" class="cursor-pointer" ui-sref="LayoutCategoryORProductList({CategoryId:PopularCategory.category_Id})" ng-bind-html="PopularCategory.name"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-xs-12 mt-15 mb-30">
            <div class="offer-block new-product">
                <img src="~/Content/layout1/images/offer1.jpg" alt="Offer" />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-lg-3 col-md-4 col-xs-12">
            <div class="row">
                @* Dashboard_CategoryController *@
                <div class="col-md-12 col-sm-6 col-xs-12 mb-20" ng-controller="Dashboard_CategoryController">
                    <div class="block-bg pb-15">
                        <div class="col-sm-12">
                            <div class="block-heading">
                                <h4>Categories</h4>
                            </div>
                        </div>
                        <div class="category-list">
                            <ul class="col-sm-12">
                                <li ng-repeat="category in CategoryList"><a href="" class="cursor-pointer" ui-sref="LayoutCategoryORProductList({CategoryId:category.Category_Id})">{{category.name}}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                @* Dashboard_SpecialOffersController *@
                <div class="col-md-12 col-sm-6 col-xs-12" ng-controller="Dashboard_SpecialOffersController" >
                    <div class="col-sm-12 block-bg deals special-offer mb-30" ng-if="SpecialOfferList.length>0">
                        <div class="block-heading">
                            <h4>Special Offers</h4>
                        </div>
                        <div class="clearfix"></div>
                        <div class="row">
                            <div id="special-offer" data-bx-slider="pager: false,nextText: '',prevText: '',minSlides: 2,maxSlides: 1,mode: 'vertical'">
                                <div class="media col-sm-12" ng-repeat="SpecialOffer in SpecialOfferList" data-notify-when-repeat-finished>
                                    <div class="media-left">
                                        <img class="media-object" ng-src="{{SpecialOffer.Image}}" alt="special Offer" />
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading" ng-bind="SpecialOffer.name"></h4>
                                        <p ng-bind="SpecialOffer.Model"></p>
                                        <span ng-bind="(SpecialOffer.cost | number:2) +'Points'"></span>
                                    </div>
                                    <div class="add-cart" ng-controller="AddProductToCartController">
                                        <button class="btn btn-empty" ng-click="AddProductToCart(SpecialOffer,$event)">Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* Dashboard_LatestProductController *@
        <div class="col-lg-9 col-md-8 col-xs-12" ng-controller="Dashboard_LatestProductController">
            <div class="row">
                <div class="col-sm-12 latest-product mb-30" ng-if="LatestProductList.length>0">
                    <div class="block-heading">
                        <h4>Latest Products</h4>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row">
                        <div id="latest-product" data-bx-slider="pager: false,nextText: '',prevText: '',minSlides: 1,maxSlides: 4,slideWidth: 290">
                            <div class="col-sm-3" ng-repeat="LatestProduct in LatestProductList" data-notify-when-repeat-finished>
                                <div class="product-block">
                                    <div class="product-img">
                                        <img ng-src="{{LatestProduct.Image}}" alt="latest product"/>
                                    </div>
                                    <a ui-sref="LayoutProductDetail({ProductId:LatestProduct.product_id})">{{LatestProduct.name}}</a>
                                    <p>{{LatestProduct.Model}}</p>
                                    <p><span>{{LatestProduct.Price}} Points</span></p>
                                    <div class="row" ng-controller="AddProductToCartController">
                                        <button class="btn btn-default" ng-click="AddProductToCart(LatestProduct,$event)">Add to Cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-xs-12 mb-30">
                    <div class="offer-block">
                        <img src="~/Content/layout1/images/offer2.jpg" alt="offer" />
                    </div>
                </div>
                <div class="col-sm-6 col-xs-12 mb-30">
                    <div class="offer-block">
                        <img src="~/Content/layout1/images/offer3.jpg" alt="offer" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $.mCustomScrollbar.defaults.theme = 'dark-thick';
        $('.best-seller').mCustomScrollbar({
            axis: "x",
            advanced: { autoExpandHorizontalScroll: true }
        });

        $('.category-list').mCustomScrollbar();

    });
</script>

