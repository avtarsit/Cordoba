<!DOCTYPE html>
<html ng-app="CordobaApp" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Cordoba</title>
    <!-- Bootstrap -->
    @Styles.Render("~/bundles/Layout2CSS")

</head>
<body>

    <div class="fix-header navbar-fixed-top">
        <div class="top-header">
            <div class="container">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="login">
                            <ul>
                                <li><a href="">My Account</a></li>
                                <li><a href="">My Wishlist</a></li>
                                <li><a href="">Login</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="header">
            <div class="container">

                <div class="col-sm-12">
                    <div class="row">
                        <div class="logo">
                            <a href=""><img src="~/Content/layout2/images/logo.png" /></a>
                        </div>
                        <div class="main-menu">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>

                            <div class="show_cart">
                                <a href=""><img src="~/Content/layout2/images/cart.png"><span class="badge">4</span></a>
                            </div>
                            <div class="search_products">
                                <input id="txtName" class="search_textbox" placeholder="Search" />
                            </div>
                            <div id="navbar" class="collapse navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li><a class="active" href="#">Home</a></li>
                                    <li><a href="#about">About</a></li>
                                    <li><a href="#contact">Contact</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    @RenderBody();

    <div class="footer">
        <div class="container">
            <div class="col-sm-4 col-md-3">
                <a href=""><img src="~/Content/layout2/images/logo.png" alt="footer-logo"></a>
            </div>
            <div class="col-sm-4 col-md-6">
                <div class="footer_menu">
                    <h5>Get To Know Us</h5>
                    <ul>
                        <li><a href="">Home</a></li>
                        <li><a href="">My Account</a></li>
                        <li><a href="">Terms & Conditions</a></li>
                        <li><a href="">Contact Us</a></li>
                        <li><a href="">Site Map</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-4 col-md-3">
                <div class="footer_menu">
                    <h5>Keep In Touch</h5>
                    <a href=""><img src="~/Content/layout2/images/fb.png" alt="facebook" /></a>
                </div>
            </div>

        </div>
    </div>
    <footer>
        <p>© Example 2017 <a href="">http://webapp2.cordobarewards.co.uk/</a> - v2.5</p>
    </footer>

    @Scripts.Render("~/bundles/Layout2Js")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/appConfig")
    @Scripts.Render("~/bundles/Layout2Controllers")

    <script type="text/javascript">
        $(window).load(function () {
            $('.flexslider').flexslider({
                animation: "slide",
                animationLoop: false,
                itemSlide: 1,
                itemWidth: 260,
                itemMargin: 25
            });
        });

        $('.special-offers .flexslider').flexslider({
            animation: "slide",
            animationLoop: false,
            itemSlide: 1,
            itemWidth: 142,
            itemMargin: 20
        });

        $('.hot-deals .flexslider').flexslider({
            animation: "slide",
            animationLoop: false,
            itemSlide: 1,
            itemWidth: 240

        });

        (function ($) {
            $(window).on("load", function () {

                $("#content-1").mCustomScrollbar({
                    theme: "minimal"
                });

            });
        })(jQuery);

        $(document).ready(function () {
            // Configure/customize these variables.
            var showChar = 145;  // How many characters are shown by default
            var ellipsestext = "...";
            var moretext = "Read more";
            var lesstext = "Show less";


            $('.more').each(function () {
                var content = $(this).html();

                if (content.length > showChar) {

                    var c = content.substr(0, showChar);
                    var h = content.substr(showChar, content.length - showChar);

                    var html = c + '<span class="moreellipses">' + ellipsestext + '&nbsp;</span><span class="morecontent"><span>' + h + '</span>&nbsp;&nbsp;<a href="" class="morelink">' + moretext + '</a></span>';

                    $(this).html(html);
                }

            });

            $(".morelink").click(function () {
                if ($(this).hasClass("less")) {
                    $(this).removeClass("less");
                    $(this).html(moretext);
                } else {
                    $(this).addClass("less");
                    $(this).html(lesstext);
                }
                $(this).parent().prev().toggle();
                $(this).prev().toggle();
                return false;
            });
        });
    </script>
</body>
</html>