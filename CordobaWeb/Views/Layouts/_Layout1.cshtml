<!DOCTYPE html>
<html ng-app="CordobaApp" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cordoba</title>

    @Styles.Render("~/bundles/Layout1CSS")   
    <style>
     @Html.Raw(HttpContext.Current.Session["CssOverride"].ToString());
    </style>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div ng-controller="DashboardController" ng-cloak>
        <div class="header navbar-fixed-top">
            <header class="w-hidden-small w-hidden-tiny top-nav">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="" class="cursor-pointer" ui-sref="EditProfile">My Account</a></li>
                        <li><a href="" ng-click="GotoMyWishlist()" >My Wishlist</a></li>
                        <li ng-if="!(CustomerDetail.customer_id>0)">
                            <a ng-click="OpenLoginPopUp()">Login</a>
                        </li>
                        <li ng-if="CustomerDetail.customer_id>0">
                            <p class="hi-text">Hi</p>
                            <a href="javascript:;" class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">{{CustomerDetail.firstname}} {{CustomerDetail.lastname}}<span class="caret"></span></a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><p>you have: <span>{{CustomerDetail.points | number : 2}} Points</span></p></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="" class="cursor-pointer" ng-click="Logout()">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </header>
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" href="#" ui-sref="Home"><img src="~/Content/layout1/images/logo.png" alt="XPO Logistics" /></a>
                    </div>
                    <div class="main-menu">
                        <div class="search-panel">
                            <a class="cart-block" ui-sref="CartDetail({cartgroup_id:CustomerDetail.cartgroup_id})">
                                <i class="fa fa-shopping-cart"></i>
                                <span class="badge" ng-bind="CustomerDetail.TotalItemAdded"></span>
                            </a>
                            @*<div class="search-block">                          
                                <input type="text" id="txtSearchFor" my-enter="GotoProductList(WhatYouarelookingfor)" ng-model="WhatYouarelookingfor" placeholder="What are you looking for?" />
                                <a href="#" ui-sref="LayoutCategoryORProductList({CategoryId:-3})"> </a>
                            </div>*@
                            <div class="pull-right">
                                <form class="navbar-form" role="search">
                                    <div class="input-group add-on">
                                        <input class="form-control" placeholder="Search" my-enter="GotoProductList(WhatYouarelookingfor)" name="srch-term" ng-model="WhatYouarelookingfor" id="srch-term" type="text">
                                        <div class="input-group-btn">
                                            <button class="btn btn-default"  ng-click="GotoProductList(WhatYouarelookingfor)"><i class="glyphicon glyphicon-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>                            
                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="active"><a href="#" ui-sref="Home">Home</a></li>
                                <li><a href="#" ui-sref="LayoutCategoryORProductList({CategoryId:-1})">Our Products</a></li>
                                <li><a href="#">Contact Us</a></li>
                                <li><a ui-sref="MyReward">Rewards</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="loader" data-loading><img class="Centerloader" src="~/Content/layout1/images/loader.gif" /></div>
        @RenderBody();

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-3 col-xs-12 pb-15">
                        <a class="footer-logo" href="index.html"><img src="~/Content/layout1/images/logo.png" alt="XPO Logistics"></a>
                    </div>
                    <div class="col-lg-8 col-md-9 col-xs-12 pb-15">
                        <div class="row">
                            <div class="col-sm-12 col-xs-12">
                                <ul class="footer-links">
                                    <li class="active"><a href="#">Home</a></li>
                                    <li><a href="#">My Account</a></li>
                                    <li><a href="#">Terms &amp; Conditions</a></li>
                                    <li><a href="#">Contact Us</a></li>
                                    <li><a href="#">Site Map</a></li>
                                </ul>
                            </div>
                            <div class="col-sm-12 col-xs-12 connect-to">
                                <p>Connect To :</p>
                                <a class="facebook" href="javascript:;"><i class="fa fa-facebook-official"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copyright">
                <p>Copyright © 2017 Cordoba</p>
            </div>
        </footer>


        <div class="about-overlay"></div>
        <div class="about-us">
            <div id="aboutScroll" class="welcome-block">
                <a href="javascript:;" class="showDesc">About Us</a>
                <div ng-bind-html="WelcomeMsg[0]"></div>
                <a ng-show="WelcomeMsg[1].length>0" id="readMore" href="javascript:;">Read More</a>
                <div class="more-content" ng-bind-html="WelcomeMsg[1]">
                </div>
            </div>

            <div class="container-fluid">
                <a href="#" id="back-to-top" title="Back to top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </div>
        <!-- login modal popup -->
        <!-- login modal popup -->
        <div class="modal" id="DivLoginModel" role="dialog">
            <div class="vertical-alignment-helper">
                <div class="modal-dialog vertical-align-center">
                    <div class="modal-content">
                        <a href="javascript:;" class="close-modal" data-dismiss="modal">No Thanks</a>
                        <div class="modal-body">
                            <div class="login_text">
                                <div class="icon-text">
                                    <img src="~/Content/layout1/images/checkin.png" alt="image" />
                                    <h4>MANAGE YOUR ORDERS</h4>
                                    <p>Track orders, manage cancellations & returns.</p>
                                </div>
                                <div class="icon-text">
                                    <img src="~/Content/layout1/images/wishlist.png" alt="image" />
                                    <h4>SHORTLIST ITEMS YOU LOVE</h4>
                                    <p>Keep items you love on a watchlist.</p>
                                </div>
                                <div class="icon-text">
                                    <img src="~/Content/layout1/images/notification.png" alt="image" />
                                    <h4>AWESOME OFFERS UPDATES FOR YOU</h4>
                                    <p>Be first to know about great offers and save.</p>
                                </div>
                            </div>
                            <form name="loginForm" id="loginForm" class="form-horizontal" novalidate>
                                <div class="login_page">
                                    <h2>Login</h2>
                                    <div class="form-group pt-20">
                                        <label for="email">Email:</label>
                                        <input type="email" class="form-control" name="EmailAddress" id="email" placeholder="Enter email" ng-model="CustomerObj.email" required="required">
                                        <p class="text-danger validationErrors" ng-show="loginForm.$submitted && (!loginForm.$valid) && (loginForm.EmailAddress.$error.required || loginForm.EmailAddress.$error.email)">Enter valid email id!</p>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password:</label>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" ng-model="CustomerObj.password" required="required">
                                        <p class="text-danger validationErrors" ng-show="loginForm.$submitted && (!loginForm.$valid) && loginForm.password.$error.required">Password is required!</p>

                                        <a href="javascript:;" class="forgot-password">Forgot Password?</a>
                                    </div>
                                    <div class="chekbox-main checkbox secondary">
                                        <input type="checkbox" id="checkbox" />
                                        <label for="checkbox">Remember Me</label>
                                    </div>
                                    <button type="submit" class="btn btn-empty mt-5 text-center" ng-click="Login(loginForm)">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>      
    </div>
    @Scripts.Render("~/bundles/Layout1Js")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/appConfig")
    @Scripts.Render("~/bundles/LayoutControllers")
    <script type="text/javascript">
        $(document).ready(function () {

            $.mCustomScrollbar.defaults.theme = 'dark-thick';

            $(".category-list, #aboutScroll").mCustomScrollbar();
            $(".showDesc").click(function () {
                var hidden = $(".about-us");
                if (hidden.hasClass("visible")) {
                    hidden.animate({ "right": "-350px" }, "slow").removeClass("visible");
                    $(".showDesc").animate({ "right": "-54px" }, "slow").removeClass("visible");
                    $(".showDesc").text("About Us");
                    $(".about-overlay").fadeOut("slow");

                } else {
                    hidden.animate({ "right": "0px" }, "slow").addClass("visible");
                    $(".showDesc").animate({ "right": "296px" }, "slow").addClass("visible");
                    $(".showDesc").text("Close");
                    $(".about-overlay").fadeIn("slow");
                }
            });

            $('#readMore').click(function () {

                $('.more-content').slideToggle();

                var LinkText = $("#readMore").text();
                LinkText = LinkText.replace(/\s/g, '');
                if (LinkText == "ReadMore") {
                    $("#readMore").text("Read Less");
                }
                else {
                    $("#readMore").text("Read More");
                }
            });

            $('.category-list').mCustomScrollbar();
        });

        $(window).scroll(function () {
            if ($(this).scrollTop() > 1) {
                $('.top-nav').addClass("hidden");
            }
            else {
                $('.top-nav').removeClass("hidden");
            }
        });

        if ($('#back-to-top').length) {
            var scrollTrigger = 100, // px
		        backToTop = function () {
		            var scrollTop = $(window).scrollTop();
		            if (scrollTop > scrollTrigger) {
		                $('#back-to-top').addClass('show');
		            } else {
		                $('#back-to-top').removeClass('show');
		            }
		        };
            backToTop();
            $(window).on('scroll', function () {
                backToTop();
            });
            $('#back-to-top').on('click', function (e) {
                e.preventDefault();
                $('html,body').animate({
                    scrollTop: 0
                }, 700);
            });
        }
      
    </script>

</body>
</html>
